{% extends "/Crud/form.html.twig" %}

{% block content %}
    <div class="container-fluid update-{{ metadata.name|lower }}">
        {% include '/Crud/Form/_header.html.twig' %}

        {% include '/Employee/Update/_content.html.twig' %}
    </div>
    <!-- Modal to load files -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Fichero adjunto <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button></h4>
                </div>
                <div class="modal-body">
                    <iframe id="attachIframe" src=""></iframe>
                </div>
                <div class="modal-footer">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-gray btn-wide btn-rounded" data-dismiss="modal"><i class="fa fa-times"></i>Cerrar</button>
                    </div>
                    <!-- /.btn-group -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scriptsjs %}
<script type="text/javascript">
    $('.file').on('click', function(){
        $('#attachIframe').attr('src', '/img/employee/{{ dbName }}/{{ resource.id }}/' + $(this).data('value'));
        $('#myModal').modal('toggle');
    });
</script>
{% endblock %}