{% extends "base.html.twig" %}

{% block title %}- Dashboard{% endblock %}

{% block description %}Trabajadores, calendario, fichar y informes.{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row page-title-div">
            <div class="col-md-12">
                <h4 class="title">Dashboard</h4>
                <p class="sub-title">Gestor de recursos humanos.</p>
            </div>
            <!-- /.col-md-12 -->
        </div>
        <!-- /.row -->
        <div class="row breadcrumb-div">
            <div class="col-md-12">
                <ul class="breadcrumb">
                    <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
                    <li class="active">Dashboard</li>
                </ul>
            </div>
            <!-- /.col-md-12 -->
        </div>
        <!-- /.row -->

        <div class="container-fluid section">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <a class="dashboard-stat-2 bg-primary" href="/trabajadores/listado">
                        <div class="stat-content">
                            <span class="number counter"><i class="fa fa-users"></i></span>
                            <span class="name">Trabajadores</span>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <a class="dashboard-stat-2 bg-primary" href="/calendario">
                        <div class="stat-content">
                            <span class="number counter"><i class="fa fa-calendar"></i></span>
                            <span class="name">Calendario</span>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <a class="dashboard-stat-2 bg-primary" href="/fichar">
                        <div class="stat-content">
                            <span class="number counter"><i class="fa fa-exchange"></i></span>
                            <span class="name">Fichar</span>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <a class="dashboard-stat-2 bg-primary" href="/informes">
                        <div class="stat-content">
                            <span class="number counter"><i class="fa fa-bar-chart"></i></span>
                            <span class="name">Informes</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Próximos eventos -->
        <div class="container-fluid section pt-10">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel border-primary no-border border-3-top">
                        <div class="panel-heading">
                            <div class="panel-title col-xs-10">
                                <h5>Próximos eventos</h5>
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Fecha</th>
                                    <th>Título</th>
                                    <th>Acciones</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for event in events %}
                                <tr>
                                    <th scope="row">{{ event.id }}</th>
                                    <td>De {{ event.fromDate.format('Y-m-d H:i:s') }} a {{ event.toDate.format('Y-m-d H:i:s') }}</td>
                                    <td>
                                        <b>{{ event.name }}</b>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-success btn-xs btn-labeled" onclick="window.location = '/eventos/modificar/{{ event.id }}'">
                                            Editar<span class="btn-label btn-label-right"><i class="fa fa-edit"></i></span>
                                        </button>
                                    </td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scriptsjs %}
{% endblock %}